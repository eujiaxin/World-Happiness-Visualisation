{
  "title": "Happiness Score vs Corruption",
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width":600,
  "height":600,
  "data": {
    "url": "https://raw.githubusercontent.com/heheheejin/FIT3179-Data-Visualisation-2-Project/main/data/world-happiness-report-2021.csv"
  },
  "layer": [
    {
      "transform": [{"filter": "datum['Perceptions of corruption'] > 0"}],
      "mark": "circle",
      "params": [{
        "name": "region",
        "select": {"type": "point", "fields": ["Regional indicator"]},
        "bind": "legend"
      }],
      "encoding": {
        "y": {
          "field": "Perceptions of corruption",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Corruption"
        },
        "x": {
          "field": "Ladder score",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Happiness score"
        },
        "size":{
          "field":"Density","type":"quantitative","title":"Density per sq km"
        },
        "color": {
          "field": "Regional indicator",
          "type": "nominal",
          "title": "Region"
        },
        "opacity": {
      "condition": {"param": "region", "value": 1},
      "value": 0.1
    }
    ,
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "Regional indicator",
            "type": "nominal",
            "title": "Region"
          },
          {"field": "Perceptions of corruption", "type": "quantitative", "title":"Corruption"},
          {"field":"Density","type":"quantitative","title":"Density (per sq km)"}
        ]
      }
    },
    {
      "transform": [
        {
          "filter": {
            "field": "Country",
            "oneOf": [
              "Malaysia",
              "Denmark",
              "Burundi",
              "Taiwan",
              "Haiti",
              "India",
              "Rwanda"        
          ]
          }
        }
      ],
      "mark": {
        "type": "text",
        "dy": 15
      },
      "encoding": {
        "x": {
          "field": "Ladder score",
          "type": "quantitative"
        },
        "y": {
          "field": "Perceptions of corruption",
          "type": "quantitative"
        },
        "text": {
          "field": "Country",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "param": "region",
            "value": 1
          },
          "value": 0.1
        }
      }
    },
    {
      "transform": [
        {
          "filter":"datum.Country == 'Luxembourg'"
        },
        {
          "calculate": "'Most Western European countries are free from corruption'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight":"bold",
        "dx":20,
        "dy":150
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        },
        "color":{"value":"grey"}
      }
    }
  ],
  "config": {}
}