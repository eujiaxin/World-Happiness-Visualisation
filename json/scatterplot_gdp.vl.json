{
  "title": "Happiness Score vs Logged GDP per capita",
  "width": 800,
  "height": 600,
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatterplot showing body mass and flipper lengths of penguins.",
  "data": {
    "url": "https://raw.githubusercontent.com/heheheejin/FIT3179-Data-Visualisation-2-Project/main/data/world-happiness-report-2021.csv"
  },
  "layer": [
    {
      "transform": [{"filter": "datum['Logged GDP per capita'] > 0"}],
      "mark": "circle",
      "params": [{
        "name": "region",
        "select": {"type": "point", "fields": ["Regional indicator"]},
        "bind": "legend"
      }],
      "encoding": {
        "x": {
          "field": "Logged GDP per capita",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Life expectancy (Age)"
        },
        "y": {
          "field": "Ladder score",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Happiness score"
        },
        "color": {
          "field": "Regional indicator",
          "type": "nominal"
        },
        "opacity": {
      "condition": {"param": "region", "value": 1},
      "value": 0.1
    },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Logged GDP per capita", "type": "quantitative", "title":"Life Expectancy"}
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "lightgray"},
      "transform": [
        {"regression": "Logged GDP per capita", "on": "Ladder score"}
      ],
      "encoding": {
        "x": {"field": "Logged GDP per capita", "type": "quantitative"},
        "y": {"field": "Ladder score", "type": "quantitative"}
      }
    }
  ],
  "config": {}
}