{
  "title": "Happiness Score vs Healthy life expectancy",
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatterplot showing body mass and flipper lengths of penguins.",
  "width":600,
  "height":600,
  "data": {
    "url": "https://raw.githubusercontent.com/heheheejin/FIT3179-Data-Visualisation-2-Project/main/data/world-happiness-report-2021.csv"
  },
  "layer": [
    {
      "transform": [{"filter": "datum['Healthy life expectancy'] > 0"}],
      "mark": "circle",
      "params": [{
        "name": "region",
        "select": {"type": "point", "fields": ["Regional indicator"]},
        "bind": "legend"
      }],
      "encoding": {
        "y": {
          "field": "Healthy life expectancy",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Healthy life expectancy"
        },
        "x": {
          "field": "Ladder score",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Happiness score"
        },
        "size":{
          "field":"Density","type":"quantitative","title":"Density per sq km"
        },
        "color": {
          "field": "Regional indicator",
          "type": "nominal",
          "title":"Region"
        },
        "opacity": {
      "condition": {"param": "region", "value": 1},
      "value": 0.1
    }
    ,
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},          {
            "field": "Regional indicator",
            "type": "nominal",
            "title": "Region"
          },
          {"field": "Healthy life expectancy", "type": "quantitative", "title":"Healthy life expectancy"},
          {"field":"Density","type":"quantitative","title":"Density (per sq km)"}
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "lightgray"},
      "transform": [
        {"regression": "Healthy life expectancy", "on": "Ladder score"}
      ],
      "encoding": {
        "y": {"field": "Healthy life expectancy", "type": "quantitative"},
        "x": {"field": "Ladder score", "type": "quantitative"}
      }
    },
        {
      "transform": [
        {
          "filter": {
            "field": "Country",
            "oneOf": [
              "Japan",
              "Burundi",
              "Taiwan",
              "Haiti",
              "India",
              "South Korea",
              "Nigeria",
              "Switzerland",
              "China",
              "Philippines"        
          ]
          }
        }
      ],
      "mark": {
        "type": "text",
        "dy": 15
      },
      "encoding": {
        "x": {
          "field": "Ladder score",
          "type": "quantitative"
        },
        "y": {
          "field": "Healthy life expectancy",
          "type": "quantitative"
        },
        "text": {
          "field": "Country",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "param": "region",
            "value": 1
          },
          "value": 0.1
        }
      }
    },
    {
      "transform": [
        {
          "filter":"datum.Country == 'Luxembourg'"
        },
        {
          "calculate": "'Most Sub-Saharan African countries have short healthy life expectancy'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight":"bold",
        "dx":-30,
        "dy":200
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        },
        "color":{"value":"brown"}
      }
    }
  ],
  "config": {}
}