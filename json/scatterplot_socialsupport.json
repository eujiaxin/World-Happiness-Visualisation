{
  "title": "Happiness Score vs Social support",
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatterplot showing body mass and flipper lengths of penguins.",
  "width":600,
  "height":600,
  "data": {
    "url": "https://raw.githubusercontent.com/heheheejin/FIT3179-Data-Visualisation-2-Project/main/data/world-happiness-report-2021.csv"
  },
  "layer": [
    {
      "transform": [{"filter": "datum['Social support'] > 0"}],
      "mark": "circle",
      "params": [{
        "name": "region",
        "select": {"type": "point", "fields": ["Regional indicator"]},
        "bind": "legend"
      }],
      "encoding": {
        "y": {
          "field": "Social support",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Social support"
        },
        "x": {
          "field": "Ladder score",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Happiness score"
        },
        "size":{
          "field":"Density","type":"quantitative","title":"Density per sq km"
        },
        "color": {
          "field": "Regional indicator",
          "type": "nominal",
          "title":"Region"
        },
        "opacity": {
      "condition": {"param": "region", "value": 1},
      "value": 0.1
    }
    ,
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},          {
            "field": "Regional indicator",
            "type": "nominal",
            "title": "Region"
          },
          {"field": "Social support", "type": "quantitative", "title":"Social support"},
          {"field":"Density","type":"quantitative","title":"Density (per sq km)"}
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "lightgray"},
      "transform": [
        {"regression": "Social support", "on": "Ladder score"}
      ],
      "encoding": {
        "y": {"field": "Social support", "type": "quantitative"},
        "x": {"field": "Ladder score", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {
          "filter": {
            "field": "Country",
            "oneOf": [
              "Malaysia",
              "Netherlands",
              "Burundi",
              "Taiwan",
              "El Salvador",
              "India",
              "Bulgaria",
              "Yemen",
              "Mauritius"     
          ]
          }
        }
      ],
      "mark": {
        "type": "text",
        "dy": 15
      },
      "encoding": {
        "x": {
          "field": "Ladder score",
          "type": "quantitative"
        },
        "y": {
          "field": "Social support",
          "type": "quantitative"
        },
        "text": {
          "field": "Country",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "param": "region",
            "value": 1
          },
          "value": 0.1
        }
      }
    },
    {
      "transform": [
        {
          "filter":"datum.Country == 'Luxembourg'"
        },
        {
          "calculate": "'Sub-Saharan African countries lack the most social support'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight":"bold",
        "dx":-30,
        "dy":235
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        },
        "color":{"value":"brown"}
      }
    }
  ],
  "config": {}
}